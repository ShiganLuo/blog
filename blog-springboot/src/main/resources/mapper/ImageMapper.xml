<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.baofeng.blog.mapper.ImageMapper">
    <resultMap id="ImageResultMap" type="com.baofeng.blog.entity.Image">
        <id property="id" column="id"/>
        <result property="filePath" column="file_path"/>
        <result property="fileName" column="file_name"/>
        <result property="fileSize" column="file_size"/>
        <result property="mimeType" column="mime_type"/>
        <result property="createdBy" column="created_by"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <select id="getImageById" resultMap="ImageResultMap">
        SELECT * FROM images WHERE id = #{id}
    </select>

    <!--查看指定时间已经存在的图片数-->
    <select id="selectImageCountWhenSpecifiedTime" resultType="java.lang.Long">
        SELECT COUNT(*) FROM images WHERE created_at &lt;= #{createdAt}
    </select>
    
    <select id="getImageIdByfilePath">
        SELECT id FROM images WHERE file_path = #{filePath}
    </select>

    <insert id="insertImage" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO images (
            file_path, file_name, file_size, mime_type, created_by, created_at, updated_at
        )
        VALUES(
            #{filePath}, #{fileName}, #{fileSize}, #{mimeType},
            #{createdBy}, NOW(), NOW()
        )
    </insert>

    <update id="updateImageSelective">
        UPDATE images 
        <set>
            <if test="filePath != null">
                file_path = #{filePath},
            </if>
            <if test="fileName != null">
                file_name = #{fileName},
            </if>
            <if test="fileSize != null">
                file_size = #{fileSize},
            </if>
            <if test="mimeType != null">
                mime_type = #{mimeType},
            </if>
            <if test="createdBy != null">
                created_by = #{createdBy},
            </if>
            <if test="createdAt != null">
                created_at = #{createdAt},
            </if>
            <if test="updatedAt != null">
                updated_at = #{updatedAt},
            </if>
            updated_at = NOW()
        </set>
        WHERE id = #{id}
    </update>
    
    <delete id="deleteImage">
        DELETE FROM images WHERE id = #{id}
    </delete>

    <!--图片摘要-->
    <resultMap id="AlbumImageMap" type="com.baofeng.blog.vo.front.FrontImageVO$AlbumResponse">
        <id property="id" column="id"/>
        <result property="album_name" column="file_name"/>
        <result property="album_cover" column="file_path"/>
    </resultMap>
    <!--获取所有图片-->
    <select id="selectAllAlbumsAbstract" resultMap="AlbumImageMap">
        SELECT id, file_name, file_path FROM images
        ORDER BY created_at DESC
    </select>

</mapper>